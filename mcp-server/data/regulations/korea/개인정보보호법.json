    "data_breach_definition": {
        "description": "법령이나 개인정보처리자의 자유로운 의사에 의하지 않고, 개인정보가 개인정보처리자의 관리·통제권을 벗어나 제3자가 내용을 알 수 있는 상태",
        "includes": [
            "분실",
            "도난",
            "유출"
        ]
    },
    "evidence_preservation": {
        "mandatory": true,
        "reason": "개인정보보호위원회 행정조사 대비",
        "recommended_actions": [
            {
                "type": "PC",
                "action": "네트워크 분리 후 전원 차단, 디스크 분리 후 별도 보관"
            },
            {
                "type": "일반 서버",
                "action": "dd 명령어를 사용한 디스크 백업 수행"
            },
            {
                "type": "가상 서버",
                "action": "스냅샷 생성 및 가상디스크 파일(VMDK, VHD, QCOW 등) 보존"
            },
            {
                "type": "보안장비",
                "action": "생성로그 등 관련자료 일체 별도 백업"
            },
            {
                "type": "악성코드",
                "action": "격리 보존 (암호압축 보관)"
            }
        ],
        "prohibited_actions": [
            "시스템 폐기 및 포맷 등 데이터 초기화",
            "악성코드 격리보존 없이 삭제",
            "모니터링 및 보안로그 삭제"
        ]
    },
